  DROP TABLE uSUARIO;

create table USUARIO(
ID_USUARIO1 INTEGER,
NOMBRE VARCHAR2(120),
EMAIL VARCHAR2(90),
SUEDO_BASE FLOAT(126),
CONSTRAINT ID_USUARIO_PK PRIMARY KEY(ID_USUARIO1)
);

CREATE TABLE DIRECCION 
(
ID_DIRECCION INTEGER,
ID_USUARIO INTEGER,
CALLE VARCHAR2(180),
NUMERO INTEGER,
COLONIA VARCHAR2(250),
MUNICIPIO VARCHAR2(180),
CP INTEGER,
-- RESTRICCIONES DE LAS LLAVES--
CONSTRAINT ID_DIRECCION_PK1 PRIMARY KEY(ID_DIRECCION),
CONSTRAINT ID_USUARIO_FK1 FOREIGN KEY(ID_USUARIO) REFERENCES USUARIO(ID_USUARIO1)
);



CREATE SEQUENCE USUARIO1
START WITH 1
INCREMENT BY 1
NOMAXVALUE;







create or replace 
PROCEDURE GUARDAR_USUARIO1(
MY_ID_USUARIO1 OUT INTEGER, MY_NOMBRE IN VARCHAR2,
MY_EMAIL IN VARCHAR2, MY_SUELDO_BASE IN FLOAT)
AS
BEGIN
SELECT SEC_USUARIO1.NEXTVAL INTO MY_ID_USUARIO1 FROM DUAL;
INSERT INTO USUARIO1 VALUES (MY_ID_USUARIO1, MY_NOMBRE,
MY_EMAIL, MY_SUELDO_BASE);
END;
